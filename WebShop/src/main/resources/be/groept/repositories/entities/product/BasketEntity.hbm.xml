<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping default-access="field">

	<class name="be.groept.repositories.entities.product.BasketEntity" table="baskets">

		<id name="id" type="long" column="id" access="property">
	        <generator class="native"/>
		</id>

		<bag name="products" table="products">
			<key column="name"/>
			<one-to-many class="be.groept.repositories.entities.product.ProductEntity"/>
		</bag>

	</class>
</hibernate-mapping>